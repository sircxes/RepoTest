<melis-installer>
	<package_info>
		<mp_title>Melis Installer</mp_title><!--Package Title-->
		<mp_package_name>melisplatform/melis-installer</mp_package_name><!--Package Name-->
		<mp_subtitle>The module that is used to install Melis Platform.</mp_subtitle><!--Package Sub Title-->
		<mp_description>
			This module is the setup that is run when installing the platform.<br />
			It will help installing the platform and the demo website, a new project, or an empty platform.<br />
			During install, the DB will be set up, as long as all selected modules from Melis Platform Community Edition.
		</mp_description>
		<mp_is_active>1</mp_is_active><!--Package Is Active-->
		<mp_group_id>1</mp_group_id><!--Package Group Id(Category Id)-->
		<mp_version>v2.3.14</mp_version><!--Package Version-->
	</package_info>
	<!--
		Package Images
		include_image - specify whether the image is included on insertion, specially when you only want to update the text like description or title
						just set this to 0 so that the image will not be re-inserted again
	-->
	<package_images>
		<img_1>
			<mpi_image_title>Img title 1</mpi_image_title><!--Image Title-->
			<mpi_image_file>img_test.jpg</mpi_image_file><!--Image File Name-->
			<mpi_image_main>1</mpi_image_main><!--Image Is Main-->
			<include_image>0</include_image><!--Image is included-->
		</img_1>
		<img_2>
			<mpi_image_title>Img title 2</mpi_image_title>
			<mpi_image_file>img_test.jpg</mpi_image_file>
			<mpi_image_main>1</mpi_image_main>
			<include_image>0</include_image>
		</img_2>
	</package_images>
</melis-installer>
